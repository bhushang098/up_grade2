<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Light">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imgOfBlogitem"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:transitionName="imgOfBlogitem" />

            <ProgressBar
                android:id="@+id/progress_load_photoBlogitem"
                style="@android:style/Widget.ProgressBar.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp" />


            <TextView
                android:id="@+id/publishedAtOfBlogItem"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imgOfBlogitem"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="6dp"
                android:background="#ffffff"
                android:padding="5dp"
                android:singleLine="true"
                android:text="01 january 1990"
                android:textColor="#F3201E1E" />

            <ImageView
                android:id="@+id/ic_dateimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imgOfBlogitem"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="6dp"
                android:layout_toStartOf="@+id/publishedAtOfBlogItem"
                android:layout_toLeftOf="@+id/publishedAtOfBlogItem"
                android:background="#ffffff"
                android:padding="2dp"
                android:src="@drawable/ic_date_range" />

            <TextView
                android:id="@+id/authorOfBlog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="#ffffff"
                android:gravity="center"
                android:text="Author"
                android:textStyle="bold"
                android:textColor="#201E1E"/>

            <TextView
                android:id="@+id/titleOfBlogItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgOfBlogitem"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-light"
                android:padding="5dp"
                android:text="title"
                android:textSize="17sp"
                android:textStyle="bold" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>
